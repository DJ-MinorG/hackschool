<div class="row">
  <div class="col-md-6">
    <%= render_course_image(@course, :medium) %>
  </div>

  <div class="col-md-6">

    <div class="course-info">
      <h2><%= @course.title%></h2>

      <%= render_course_description(@course) %>

      <%= render_course_price(@course) %>
    </div>

    <div class="clearfix">
      <% if @order && @order.paid? %>
        <%= link_to("立即观看", course_chapters_path(@course), class: "btn btn-info pull-right") %>
      <% else %>
        <%= link_to("立即购买", course_plans_path(@course), class: "btn btn-danger pull-right")%>
      <% end %>
    </div>

  </div>
</div>
