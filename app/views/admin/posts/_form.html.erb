<%= simple_form_for [:admin, @post] do |f| %>
<%= f.input :chapter_id, :as => :hidden, :input_html => { :value => @post.chapter_id } %>
<%= f.input :title %>
<%= f.input :article %>
<%= f.submit "Submit" %>
<% end %>
