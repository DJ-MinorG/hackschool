<div class="pull-right">
    <%= link_to("Add a course", new_admin_course_path, :class => "btn btn-default") %>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>#</td>
            <td>课程名</td>
            <td>教师</td>
            <td>选项</td>
            <td>课程控制台</td>
            <td>创建日期</td>
        </tr>
    </thead>
    <tbody>
        <% @courses.each do |course| %>
        <tr>
            <td><%= course.id %></td>
            <td>
                <%= render_course_status(course) %>
                <%= link_to(course.title, course_path(course)) %>
                <%= link_to("查看报名人数", admin_course_path(course), class: "btn btn-xs btn-default") %>
            </td>
            <td>
                <%= course.teacher_name %>
            </td>

            <td>
              <%= render :partial => "admin/courses/course_options", :locals => { :course => course} %>
            </td>
            <td>

                <%= link_to("进入控制台", admin_course_chapters_path(course), class: "btn btn-xs btn-success") %>

            </td>
            <td>
                <%= render_formatted_time(course.created_at) %>
            </td>

        </tr>
        <% end %>
    </tbody>
</table>
