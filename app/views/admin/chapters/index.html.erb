<div class="row">
  <div class="col-md-12">
<div class="pull-right">
  <%= link_to("上传章节", new_admin_chapter_path, :class => "btn btn-default") %>
</div>
<% @chapters.each do |chapter| %>
<table class="table table-bordered">
      <thead>
        <tr>
          <h1><%= chapter.chapter %></h1>
          <div class="pull-right">
          <%= link_to("Edit", edit_admin_chapter_path(chapter), class: "btn btn-xs btn-primary") %>
          <%= link_to("Delete", admin_chapter_path(chapter), method: :delete, class: "btn btn-xs btn-danger", data: { confirm: "Are you sure?"}) %>
          <%= link_to("Add a post",new_admin_post_path(chapter_id: chapter), class: "btn btn-xs btn-primary") %>
        </div>
        </tr>
      </thead>

      <tbody>

          <% chapter.posts.each do |post| %>
          <tr>
          <td>
            <%= link_to(post.title, admin_post_path(post)) %>
            <%= link_to("Delete", admin_post_path(post), method: :delete, class: "btn btn-xs btn-default pull-right", data: { confirm: "Are you sure?"}) %>
            <%= link_to("Edit", edit_admin_post_path(post), class: "btn btn-xs btn-default pull-right") %>
          </td>
          <% end %>

        </tr>
        <% end %>
      </tbody>
    </table>

</div>
</div>
