<table class="table">
 <thead>
     <tr>
         <th>是否为管理员</th>
         <th>用户名</th>
         <th>注册时间</th>
         <th>上次登录时间</th>
		 <th>管理选项</th>    
     </tr>
 </thead>

 <% @users.each do |user| %>

 <tbody>
     <tr>
       <td><%= render_user_status(user) %></td>
	   <td><%= user.email %></td>           
       <td><%= user.created_at %></td>
       <td><%= user.last_sign_in_at %></td>

	   <td>   
        	<% if user.is_admin %>
	    		<% if user != current_user %>
	    	<%= link_to("将该管理员设为用户",  turn_to_user_admin_user_url(user), :method => :post, :class => "btn btn-xs btn-default") %>
	    		<% end %>
            <% else %>
			<%= link_to("将该用户设为管理员", turn_to_admin_admin_user_url(user), :method => :post, :class => "btn btn-xs btn-default") %>
			<% end %>		
       </td>

     </tr>
   <% end %>
 </tbody>
</table>